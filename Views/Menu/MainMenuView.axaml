<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ContohMenu.Views.Menu.MainMenuView">
	
	<DockPanel LastChildFill="True">
		<TextBlock DockPanel.Dock="Top">MAIN MENU</TextBlock>
		<Grid ColumnDefinitions="* * *" DockPanel.Dock="Bottom">
			<TextBlock Grid.Column="0" Text="{Binding OptionList[0]}"/>
			<TextBlock Grid.Column="2" Text="{Binding OptionList[1]}"/>
		</Grid>
		<TextBlock/>
	</DockPanel>
	
</UserControl>
